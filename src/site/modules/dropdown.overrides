/*******************************
        User Overrides
*******************************/

/*--------------
      Menu
---------------*/

.ui.menu .inverted.dropdown.item .menu,
.ui.inverted.dropdown .menu {
  background: @highlight;
  box-shadow: @muted-text;
  border: @muted-text;
  box-shadow: 0 0 6px 1px darken(@main-dark, 5%) !important;
}

/*--------------
    Menu Item
---------------*/

.ui.menu .ui.inverted.dropdown .menu > .item,
.ui.inverted.dropdown .menu > .item {
  border: 0px solid @highlight;
  border-top: 1px solid @main;
  color: @white !important;
  font-weight: 300 !important;
  box-shadow: @main-dark;
}


/*--------------------
    Keyboard Select
----------------------*/

/* Selected Item */
.ui.inverted.dropdown.selected,
.ui.inverted.dropdown .menu .selected.item {
  background: @main;
  color: @white;
}

.ui.selection.visible.inverted.dropdown > .text:not(.default) {
    color: @white;
}

.ui.menu .ui.inverted.dropdown .menu > .item:hover,
.ui.inverted.dropdown .menu > .item:hover,
.ui.inverted.dropdown .menu>.item:hover {
  background: @main !important;
  color: @white !important;
}

.ui.selection.inverted.dropdown .menu > .item {
  border-top: 1px solid @main-dark;
}

.ui.menu .ui.inverted.dropdown .menu > .active.item,
.ui.inverted.dropdown .menu .active.item {
    background: @main !important;
    color: @white !important;
}

.ui.active.search.inverted.dropdown input.search:focus+.text {
    color: @white !important;
}

/*-----------------
  Item Description
-------------------*/

.ui.inverted.dropdown > .text > .description,
.ui.inverted.dropdown .menu > .item > .description {
  color: @white;
}


/*--------------
    Selection
---------------*/

/* Displays like a select box */
.ui.selection.inverted.dropdown {
  background: @highlight;
  color: @text;
  box-shadow: @main-dark;
  border: 1px solid @highlight;
}

.ui.selection.active.inverted.dropdown,
.ui.selection.inverted.dropdown:focus,
.ui.selection.active.dropdown:hover {
    border-color: @muted-text;
}
